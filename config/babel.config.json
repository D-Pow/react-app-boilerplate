{
    "presets": [
        [
            "@babel/preset-env",
            {
                "useBuiltIns": "usage",
                "corejs": {
                    "version": "3.16",
                    "proposals": true
                },
                "shippedProposals": true,
                "targets": {
                    "node": "current",
                    "browsers": "> 0.25%, not dead"
                }
            }
        ],
        "@babel/preset-react",
        "@babel/preset-typescript"
    ],
    "plugins": [
        "@babel/plugin-transform-runtime",
        "@babel/plugin-syntax-dynamic-import",
        [
            "@babel/plugin-proposal-decorators",
            {
                "legacy": true
            }
        ],
        [
            "babel-plugin-module-resolver",
            {
                "cwd": [ "packagejson" ],
                "alias": {
                    "@": "./src/",
                    "/": "./"
                }
            }
        ]
    ]
}
