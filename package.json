{
  "name": "react-app-boilerplate",
  "version": "0.1.0",
  "description": "A simpler React boilerplate than CRA with more useful built-in features",
  "main": "index.js",
  "author": "D-Pow",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/D-Pow/react-app-boilerplate.git"
  },
  "engines": {
    "node": ">=13",
    "npm": ">=7"
  },
  "scripts": {
    "start": "webpack serve --config ./config/webpack.config.mjs",
    "start:allowLanAccess": "cross-env ALLOW_LAN_ACCESS=true npm start",
    "mock": "cross-env MOCK=true npm start",
    "mock:allowLanAccess": "cross-env ALLOW_LAN_ACCESS=true npm run mock",
    "test": "jest --config ./config/jest.config.mjs tests",
    "create": "node scripts/createComponent.js",
    "build": "cross-env NODE_ENV=production webpack --mode production --config ./config/webpack.config.mjs",
    "prebuild": "npm run clean",
    "clean": "npx shx rm -rf dist coverage",
    "deploy": "gh-pages -d dist",
    "predeploy": "npm run build"
  },
  "eslintConfig": {
    "extends": "./config/.eslintrc.json"
  },
  "keywords": [
    "boilerplate",
    "web development",
    "create-react-app",
    "typescript",
    "website",
    "webpack"
  ],
  "dependencies": {
    "prop-types": "^15.7.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/plugin-proposal-decorators": "^7.14.2",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@svgr/webpack": "^5.5.0",
    "@types/jest": "^26.0.23",
    "@types/node": "^13.13.52",
    "@types/react": "^16.14.6",
    "@types/react-dom": "^16.9.13",
    "@types/react-router": "^5.1.14",
    "@types/react-router-dom": "^5.1.7",
    "@types/webpack": "^5.28.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-module-resolver": "^4.1.0",
    "copy-webpack-plugin": "^6.4.1",
    "core-js": "^3.16.0",
    "cross-env": "^5.2.1",
    "css-loader": "^5.2.5",
    "css-minimizer-webpack-plugin": "^3.0.1",
    "dotenv": "^7.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^6.8.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^2.5.1",
    "file-loader": "^6.2.0",
    "gh-pages": "^3.1.0",
    "html-webpack-plugin": "^5.3.1",
    "isomorphic-fetch": "^3.0.0",
    "jest": "^27.0.4",
    "jest-css-modules-transform": "^4.2.1",
    "mini-css-extract-plugin": "^1.6.0",
    "mock-requests": "^1.3.1",
    "postcss": "^8.3.0",
    "postcss-loader": "^5.3.0",
    "postcss-preset-env": "^6.7.0",
    "sass": "^1.35.1",
    "sass-loader": "^11.1.1",
    "shelljs": "^0.8.4",
    "terser-webpack-plugin": "^4.2.3",
    "ts-loader": "^8.2.0",
    "typescript": "^3.9.9",
    "webpack": "^5.37.0",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^3.11.2"
  }
}
