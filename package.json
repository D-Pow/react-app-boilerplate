{
  "name": "react-app-boilerplate",
  "version": "0.1.0",
  "description": "A simplified boilerplate app for websites that's better organized than create-react-app",
  "main": "index.js",
  "author": "D-Pow",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/D-Pow/react-app-boilerplate.git"
  },
  "scripts": {
    "start": "webpack-dev-server --config ./config/webpack.config.js",
    "mock": "cross-env MOCK=true npm start",
    "clean": "npx shx rm -rf dist",
    "prebuild": "npm run clean",
    "build": "cross-env NODE_ENV=production webpack --mode production --config ./config/webpack.config.js",
    "test": "jest --coverage tests",
    "create": "node scripts/createComponent.js",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "dependencies": {
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-regenerator": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@types/jest": "^25.1.1",
    "@types/node": "^13.7.0",
    "@types/react": "^16.9.19",
    "@types/react-dom": "^16.9.5",
    "@types/react-router": "^5.1.4",
    "@types/react-router-dom": "^5.1.3",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "copy-webpack-plugin": "^5.1.1",
    "core-js": "^3.6.4",
    "cross-env": "^5.2.1",
    "css-loader": "^2.1.1",
    "dotenv": "^7.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "file-loader": "^3.0.1",
    "gh-pages": "^2.2.0",
    "html-webpack-plugin": "^3.2.0",
    "interpolate-html-plugin": "^3.0.0",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^25.1.0",
    "mini-css-extract-plugin": "^0.6.0",
    "mock-requests": "^1.1.13",
    "node-sass": "^4.13.1",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "sass-loader": "^7.3.1",
    "shelljs": "^0.8.3",
    "terser-webpack-plugin": "^2.3.2",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.5",
    "url-loader": "^1.1.2",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "eslintConfig": {
    "extends": "./config/.eslintrc.json"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/config/jestSetup.js"
    ],
    "modulePaths": [
      "<rootDir>/src"
    ],
    "transform": {
      "\\.[tj]sx?$": "<rootDir>/config/jestTransformer.js"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/dist"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/config"
    ],
    "moduleNameMapper": {
      "\\.(s?css|png|gif|jpe?g|svg|ico|pdf|tex)": "<rootDir>/config/jestFileMock.js"
    }
  },
  "keywords": [
    "boilerplate",
    "web development",
    "create-react-app",
    "typescript",
    "website",
    "webpack"
  ]
}
