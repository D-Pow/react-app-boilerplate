{
  "name": "react-app-boilerplate",
  "version": "0.1.0",
  "description": "A simpler React boilerplate than CRA with more useful built-in features",
  "main": "index.js",
  "author": "D-Pow",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/D-Pow/react-app-boilerplate.git"
  },
  "engines": {
    "node": ">=14.5",
    "npm": ">=7"
  },
  "config": {
    "buildOutputDir": "dist",
    "eslintExtensions": ".tsx,.ts,.jsx,.js,.mjs,.cjs"
  },
  "scripts": {
    "start": "webpack serve --config ./config/webpack.config.mjs",
    "start:allowLanAccess": "cross-env ALLOW_LAN_ACCESS=true npm start --",
    "mock": "cross-env MOCK=true npm start --",
    "mock:allowLanAccess": "cross-env ALLOW_LAN_ACCESS=true npm run mock --",
    "test": "jest tests",
    "lint": "eslint --ext $npm_package_config_eslintExtensions",
    "lint:all": "npm run lint . --",
    "createComponent": "node scripts/createComponent.js",
    "build": "cross-env NODE_ENV=production webpack --mode production --config ./config/webpack.config.mjs",
    "prebuild": "npm run clean --",
    "clean": "npx shx rm -rf $npm_package_config_buildOutputDir coverage",
    "deploy": "gh-pages -d $npm_package_config_buildOutputDir",
    "predeploy": "npm run build --"
  },
  "jest": {
    "preset": "./config/jest/jest.config.mjs"
  },
  "keywords": [
    "boilerplate",
    "web development",
    "create-react-app",
    "typescript",
    "website",
    "webpack"
  ],
  "dependencies": {
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router": "^5.2.1",
    "react-router-dom": "^5.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/eslint-parser": "^7.15.8",
    "@babel/eslint-plugin": "^7.14.5",
    "@babel/plugin-proposal-decorators": "^7.15.8",
    "@babel/plugin-transform-runtime": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@svgr/webpack": "^5.5.0",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.4",
    "@types/react": "^17.0.32",
    "@types/react-dom": "^17.0.10",
    "@types/react-reconciler": "^0.26.4",
    "@types/react-router": "^5.1.17",
    "@types/react-router-dom": "^5.3.1",
    "@types/webpack": "^5.28.0",
    "@types/webpack-dev-server": "^4.3.1",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "babel-loader": "^8.2.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "copy-webpack-plugin": "^6.4.1",
    "core-js": "^3.18.3",
    "cross-env": "^5.2.1",
    "css-loader": "^5.2.5",
    "css-minimizer-webpack-plugin": "^3.0.1",
    "dotenv": "^7.0.0",
    "eslint": "^7.32.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-import-alias": "^1.2.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "gh-pages": "^3.1.0",
    "html-webpack-plugin": "^5.3.1",
    "isomorphic-fetch": "^3.0.0",
    "jest": "^27.3.1",
    "jest-css-modules-transform": "^4.3.0",
    "mini-css-extract-plugin": "^2.4.3",
    "mock-requests": "^1.3.1",
    "postcss": "^8.3.0",
    "postcss-loader": "^5.3.0",
    "postcss-preset-env": "^6.7.0",
    "sass": "^1.43.3",
    "sass-loader": "^11.1.1",
    "shelljs": "^0.8.4",
    "terser-webpack-plugin": "^4.2.3",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.4",
    "webpack": "^5.59.1",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.3.1",
    "yargs-parser": "^20.2.9"
  }
}
